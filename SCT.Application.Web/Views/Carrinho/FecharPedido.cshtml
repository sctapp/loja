@model SCT.Entity.Entidades.Pedido

@{
    ViewBag.Title = "Seven: Fechar o pedido";
}

<h2>Fechamento Do Pedido</h2>

<p>Digite suas informações abaixo</p>

@using (Html.BeginForm())
{

    @Html.ValidationSummary()

    <h3>Enviar para</h3>

    <div class="form-group">
        <label>Nome do cliente:</label>
        @Html.TextBoxFor(x => x.NomeCliente, new { @class = "form-control" })
    </div>

    <h3>Dados para entrega</h3>

    <div class="form-group">
        <label>CEP:</label>
        @Html.TextBoxFor(x => x.CEP, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Endereço:</label>
        @Html.TextBoxFor(x => x.Endereco, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Complemento:</label>
        @Html.TextBoxFor(x => x.Complemento, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Bairro:</label>
        @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Cidade:</label>
        @Html.TextBoxFor(x => x.Cidade, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Estado:</label>
        @Html.TextBoxFor(x => x.Estado, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>E-mail:</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <h3>Opções</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.EmbrulhaPresente, new { @class = "form-control" })
            Embrulha para presente?
        </label>
    </div>

    <input type="submit" class="btn btn-primary" value="Fechar o pedido" />
}
