@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Todos os produtos", "ListProdutos", "Vitrine", null, new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Vitrine",
        action = "ListProdutos",
        categoria = link,
        pagina = 1
    }, new
    {
        @class = "btn btn-block btn-default btn-lg"
        + (link == ViewBag.CategoriaSelecionada ? " btn-primary" : "")
    })
}